<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.project.dao.ProdectCategoryDao">
    <select id="queryProductCategory" resultType="com.ssm.project.entity.ProductCategory" parameterType="Long">
    SELECT
       product_category_id,
       product_category_name,
       priority,
       create_time,
       shop_id
    FROM  tb_product_category
    WHERE
    shop_id = #{shop_id}
     ORDER BY
         priority DESC
    </select>
</mapper>